{% extends 'base.html.twig' %}

{% block title %}Pays index
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			text-align: center;
		}
	</style>

	<div class="example-wrapper">


		<h1 class="mt-3 mb-3">Liste des pays</h1>


		<a class="btn btn-success bi bi-plus mt-3 mb-3" href="{{ path('app_pays_new') }}">ajouter</a>
	</div>


	<table class="table table-dark table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>NomPays</th>
				<th>NomContinents</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for pay in pays %}
				<tr>
					<td class="text-center">{{ pay.id }}</td>
					<td class="text-center">{{ pay.nomPays }}</td>
					<td class="text-center">{{ pay.continents.nom }}</td>
					<td>
						<a class="btn btn-info btn-block bi bi-eye" href="{{ path('app_pays_show', {'id': pay.id}) }}">voir</a>
						<a class="btn btn-secondary bi bi-pencil" href="{{ path('app_pays_edit', {'id': pay.id}) }}">modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
