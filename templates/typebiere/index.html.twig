{% extends 'base.html.twig' %}

{% block title %}Typebiere index
{% endblock %}

{% block body %}
	<h1 class="mt-3 mb-3 text-center">Liste des types de bi√®res</h1>

	<a class="btn btn-success bi bi-plus mt-3 mb-3 text-center" href="{{ path('app_typebiere_new') }}">Ajouter</a>

	<table class="table table-dark table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>NomType</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for typebiere in typebieres %}
				<tr>
					<td>{{ typebiere.id }}</td>
					<td>{{ typebiere.nomType }}</td>
					<td>
						<a class="btn btn-info bi bi-eye" href="{{ path('app_typebiere_show', {'id': typebiere.id}) }}">voir</a>
						<a class="btn btn-secondary bi bi-pencil" href="{{ path('app_typebiere_edit', {'id': typebiere.id}) }}">modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
